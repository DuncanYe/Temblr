<div class="form">
  <%= form_for [post, comment] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: " what's your name", class: 'form-control' %>
    </div>         
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, placeholder: 'What do you thing?', class: 'form-control' %>
    <div class="form-group">
    <br>
      <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>