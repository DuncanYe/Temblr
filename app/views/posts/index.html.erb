<div class="post_wrapper col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    

  <% @posts.each do |post| %>
    <h2 class="title"><%= link_to post.title, post %></h2>
    <p><%= link_to post_path(post) do %></p>
       <%= image_tag post.image, class:'img-responsive' %>
       <% end %>
    <p class="body"><%= truncate(post.body, length:100) %></p>
    <p class="date"><%= time_ago_in_words(post.created_at) %></p>
    <hr>
  <% end %>

  </div>
</div>
  



